FROM python:3.10-slim

WORKDIR /app

# 개발 환경을 위한 패키지 설치
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# 필요한 Python 패키지 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 애플리케이션 코드 복사
COPY . .

# 개발용 환경 변수 설정
ENV ENV=development
ENV DEBUG=true

# 포트 설정
EXPOSE 8000

# 애플리케이션 실행
CMD ["python", "app.py"] 